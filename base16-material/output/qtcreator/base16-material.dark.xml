<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 material">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#ecefef" background="#263238"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#b5bd68"/>
  <style name="CurrentLine" background="#707880"/>
  <style name="LineNumber" foreground="#707880"/>
  <style name="CurrentLineNumber" foreground="#b5bd68" bold="true"/>
  <style name="SearchResult" background="263238"/>
  <style name="Parentheses" background="#37474f" />

  <!-- ??? -->
  <style name="SearchScope" foreground="#000000" background="#ffffff"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#707880"/>
  <style name="Occurrences.Rename" background="#b5bd68"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#cc6666"/>

  <!-- language primitives -->
  <style name="Number" foreground="#cc6666"/>
  <style name="String" foreground="#b5bd68"/>
  <style name="Keyword" foreground="#b294bb"/>
  <style name="Operator" foreground="#ecefef"/>
  <style name="Preprocessor" foreground="#81a2be"/>
  <style name="Label" foreground="#cc6666"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f0c674"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#81a2be"/>
  <style name="VirtualMethod" foreground="#81a2be" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#ecefef"/>
  <style name="Local" foreground="#ecefef"/>
  <style name="Static" foreground="#ecefef"/>
  <style name="JsScopeVar" foreground="#ecefef" italic="true"/>
  <style name="JsImportVar" foreground="#ecefef" italic="true"/>
  <style name="JsGlobalVar" foreground="#ecefef" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#37474f"/>

  <!-- comments -->
  <style name="Comment" foreground="#707880"/>
  <style name="DisabledCode" foreground="#707880"/>
  <style name="Doxygen.Comment" foreground="#707880"/>
  <style name="Doxygen.Tag" foreground="#707880"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#b294bb"/>
  <style name="Binding" foreground="#cc6666"/>
  <style name="QmlExternalId" foreground="#81a2be" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#81a2be" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#b294bb"/>
  <style name="DiffLocation" foreground="#81a2be"/>
  <style name="AddedLine" foreground="#b5bd68"/>
  <style name="RemovedLine" foreground="#f0c674"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#b294bb"/>
  <style name="DiffContextLine" foreground="#81a2be"/>
  <style name="DiffSourceLine" foreground="#b5bd68"/>
  <style name="DiffSourceChar" foreground="#f0c674" background="#263238"/>
  <style name="DiffDestLine" foreground="#b5bd68"/>
  <style name="DiffDestChar" foreground="#f0c674" background="#263238"/>
</style-scheme>
